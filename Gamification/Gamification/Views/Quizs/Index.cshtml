@model IEnumerable<Gamification.Models.Quiz>

@{
    ViewBag.Title = "Index";
}

<h2>Popis kvizova</h2> <br />
<h4>Veće levele kvizova otključaješ sa večim xp-om</h4> <br />

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.QuizLevel)
        </th>
    </tr>

@foreach (var item in Model) {
    if (ViewBag.xp < 15 && item.QuizLevel < 2)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuizLevel)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |*@
            @Html.ActionLink("Pokreni kviz", "StartQuiz", new { id = item.Id })
        </td>
    </tr>
    }
    if (ViewBag.xp > 15 && item.QuizLevel == 2)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuizLevel)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Pokreni kviz", "StartQuiz", new { id = item.Id })
            </td>
        </tr>
    }

}


</table>
